uint32_t INC_Value_L2 = 0; // Echo Low ?��?�� ?���??????????
uint32_t echoTime_L = 0; // Distance(?���?????????? 거리)�?????????? 측정?���?????????? ?��?�� Echo Time()
uint8_t captureFlag_L = 0;
uint8_t distance_L = 0;

uint32_t INC_Value_M1 = 0; // Echo High?��?�� ?���??????????
uint32_t INC_Value_M2 = 0; // Echo Low ?��?�� ?���??????????
